<%= form_for(@car, :html => { :multipart => true }) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :year %>
    <%= f.number_field :year, :autofocus => true %>
  </div>
  <div class="field">
    <%= f.label :make %>
    <%= f.text_field :make %>
  </div>
  <div class="field">
    <%= f.label :model %>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit "Save", :class => "btn btn-success" %>
    <%= link_to "Cancel", @car, :class => "btn btn-default", :id => "cancel-button" %>
  </div>
<% end %>
