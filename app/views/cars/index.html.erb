<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.year %></td>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td>$<%= car.price + car.modifications.sum(:price) %></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to 'View', car, :class => "btn btn-primary", :style => "color:white" %>
            <%= link_to 'Edit', edit_car_path(car), :class => "btn btn-primary", :style => "color:white" %>
            <%= link_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure you want to delete this car?' }, :class => "btn btn-primary", :style => "color:white" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
