<p id="notice"><%= notice %></p>

<%= link_to 'Back', cars_path %> | 
<%= link_to 'Edit', edit_car_path(@car) %> |
<%= link_to 'Delete', @car, method: :delete, data: { confirm: 'Are you sure you want to delete this car?' } %>
<h3>Car</h3>
<p>
  <strong>Year:</strong>
  <%= @car.year %>
</p>

<p>
  <strong>Make:</strong>
  <%= @car.make %>
</p>

<p>
  <strong>Model:</strong>
  <%= @car.model %>
</p>

<p>
  <strong>Price:</strong>
  $<%= number_with_delimiter(@car.price, :delimiter => ',') %>
</p>

<% if @car.image? %>
  <%= image_tag @car.image.url, :class => "car-image" %>
<% end %>

<br />
<h3>Modifications</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Modification</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @car.modifications.each do |modification| %>
      <tr>
        <td><%= modification.name %></td>
        <td>$<%= number_with_delimiter(modification.price, :delimiter => ',') %></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to 'Delete', [@car, modification], :method => :delete, data: { confirm: 'Are you sure you want to delete this modification?' }, :class => "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
    <tr>
    	<td><strong>Mods Total</strong></td>
    	<td><strong>$<%= number_with_delimiter(@car.modifications.sum(:price), :delimiter => ',') %></strong></td>
    	<td></td>
    </tr>
    <tr>
    	<td><strong>Build Total</strong></td>
    	<td><strong>$<%= number_with_delimiter(@car.modifications.sum(:price) + @car.price, :delimiter => ',') %></strong></td>
    	<td></td>
    </tr>
  </tbody>
</table>

<h3>Add Modification</h3>

<%= form_for([@car, @car.modifications.build]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <br>
  <%= f.submit "Add", :class => "btn btn-success" %>
<% end %>
