<p id="notice"><%= notice %></p>

<h3>Car</h3>
<p>
  <strong>Year:</strong>
  <%= @car.year %>
</p>

<p>
  <strong>Make:</strong>
  <%= @car.make %>
</p>

<p>
  <strong>Model:</strong>
  <%= @car.model %>
</p>

<p>
  <strong>Price:</strong>
  $<%= @car.price %>
</p>

<br />
<h3>Modifications</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Modification</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @car.modifications.each do |modification| %>
      <tr>
        <td><%= modification.name %></td>
        <td>$<%= modification.price %></td>
    		<td>
          <div class="btn-group" role="group">
    				<%= link_to 'Delete', [@car, modification], :method => :delete, data: { confirm: 'Are you sure you want to delete this modification?' }, :class => "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
    <tr>
    	<td><strong>Mods Total</strong></td>
    	<td><strong>$<%= @car.modifications.sum(:price) %></strong></td>
    	<td></td>
    </tr>
    <tr>
    	<td><strong>Build Total</strong></td>
    	<td><strong>$<%= @car.modifications.sum(:price) + @car.price %></strong></td>
    	<td></td>
    </tr>
  </tbody>
</table>

<br />
<h3>Add Modification</h3>
<%= form_for([@car, @car.modifications.build]) do |f| %>
<p>
	<%= f.label :name %>
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :price %>
	<%= f.text_field :price %>
</p>
<p>
	<%= f.submit "New Modification", :class => "btn btn-primary" %>
	</p>
<% end %>

<%= link_to 'Edit', edit_car_path(@car) %> |
<%= link_to 'Back', cars_path %>
